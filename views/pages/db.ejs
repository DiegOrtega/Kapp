<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>
  
<body>
    <h1>Add Movies</h1>
    <form method='post' action='/movie/add'>
        <label>Movie Name</label><br>
        <input type='text' name='movie_title'>
        <br>
        <label>Year</label><br>
        <input type='text' name='movie_year'>
        <br><br>
        <input type='submit' value='Submit'>
    </form>
    
    <h1>Add Actors</h1>
     <form method='post' action='/actor/add'>
        <label>Actor Name</label><br>
        <input type='text' name='name'>
        <br><br>
        <input type='submit' value='Submit'>
    </form>
    
    <h1>Add Actors to Movies</h1>
     <form method='post' action='/movie/actor/add'>
        <label>Movie Name</label>
         <br>
        <input type='text' name='movie_title'>
         <br>
         <label>Actor Name</label>
         <br>
        <input type='text' name='name'>
        <br><br>
        <input type='submit' value='Submit'>
    </form>
    
    <h1>Movies</h1>
    <ul>     
    <% movies.forEach(function(movie){ %>
       <li><%= movie.title %></li> 
    <% }) %>
    </ul> 
    
    <h1>Actors</h1>
    <ul>     
    <% actors.forEach(function(actor){ %>
       <li><%= actor.name %></li> 
    <% }) %>
    </ul>
    
</body>
</html>
